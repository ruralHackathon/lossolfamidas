            {% for hacer in hacers %}
              <div  class="col-xs-12 col-sm-6 col-md-4 espaciocard">
                <div class="card h-100">
                  <a href="{{hacer.id}}">    
                      <img class="card-img-top imghacer" src="{{ asset(ruta_imagenes ~ hacer.imagen.nombre) }}" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title textohacer">{{ hacer.titulo}}</h5></a>        
                      <div class="card-text textohacer2">  
                        <p class="texto_card">{{ hacer.texto|slice(0, 145) }}</p>
                      </div>                            
                    </div>
                </div>
              </div>
            {% endfor %}
          </div>
          <br>
          <br>
        {% endfor %}
      </div>
    </div>
