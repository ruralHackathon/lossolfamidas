{% block body %}   
  <div class="container-fluid"> 
     <div id="carousel">
          <div class="carousel-inner">
              <div class="carousel-item active">
                  <img class="img2_index_trans" src="/images/puestasol.jpg" border="1" alt="Este es el ejemplo de un texto alternativo"> 
                  <div class="carousel-caption">
                  <h1 class="titulo_foto2">¿Qué hacer?</h1>       
              </div>          
           </div>   
      </div>
    <div class="container">
