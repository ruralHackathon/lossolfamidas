{% extends 'base.html.twig' %}

{% block title %}Comer index{% endblock %}

{% block stylesheets %}
   {{ encore_entry_link_tags('comer') }}            
{% endblock %}


{% block body %}
<div class="container container-fluid">
    <div class="row">
        <h1><b>¿Dónde comemos?</b></h1>
        <div class="row">
                {% for comer in comers %}
                    <div class="col-md-4">
                        <a href="#mimodal" data-toggle="modal" class="amodal">
                            <div class="card">
                                <img class="card-img-top" src="{{ comer.url }}" height="200" alt="Card image cap">
                                <div class="card-body">
                                    <input value="{{comer.id}}" type="hidden"></input>
                                    <div class="card-title">
                                        <h5><b>{{ comer.nombre }}</b></h5>
                                    </div>
                                    <div class="card-text">
                                        <p>{{ comer.descripcion }}</p>
                                    </div>
                        </a>
                                    <hr>                                    
                                    <div class="footer">
                                        <span class="text-muted"><i class="fas fa-map-marker-alt"></i> {{ comer.direccion }}</span>
                                    </div>
                                </div>
                            </div>
                    </div>
                {% endfor %}
        </div>
    </div>
</div>


{% block javascripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags('appcomer') }}

{% endblock %}

{% include 'comer/modal.html.twig' %}
{% endblock %}

